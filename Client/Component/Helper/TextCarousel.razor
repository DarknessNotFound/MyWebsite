<div class="container-fluid">
	<div class="h-75">
		<div class="h4">
			@TextDisplaying[0]
		</div>
		@foreach(string text in TextDisplaying)
		{
			if (text != TextDisplaying[0])
			{
				<div style="overflow-y: auto; word-wrap: break-word; max-height: @MaxHeight;">
					@text
				</div>
			}
		}
	</div>
	<div class="d-flex justify-content-around h-25">
		<div class="arrow" @onclick='ShiftLeft'>@("<")</div>
		<div class="arrow" @onclick='ShiftRight'>@(">")</div>
	</div>
</div>

<style>
	.arrow {
		width: 50px;
		background-color: rgba(255, 255, 255, 0.5);
		font-size: 30px;
		font-weight 600; 
		text-align: center;
		user-select: none;
	}
</style>

@code {
	[Parameter]
	public List<List<string>> Data { get; set; } = new List<List<string>>();

	[Parameter]
	public string MaxHeight { get; set; } = "";

	private List<string> TextDisplaying => Data[index];
	private int index;


	protected override void OnInitialized()
	{
		if(Data.Count > 0)
		{
			index = 0;
		}
		else
		{
			Data.Add(new List<string>() { "Error", "Error retriving data." });
		}
	}

	public void ShiftRight()
	{
		if (index == Data.Count - 1)
			index = 0;
		else
			index++;

		StateHasChanged();
	}

	public void ShiftLeft()
	{
		if (index == 0)
			index = Data.Count - 1;
		else
			index--;

		StateHasChanged();
	}
}